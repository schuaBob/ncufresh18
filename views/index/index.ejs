        .slider_container{
            width:  100%;
            height: 100%;
            display: block;
        }
        .img_container {
            width:  100%;
            height: 100%;
            -webkit-animation: round 50s linear infinite;
            animation: round 50s linear infinite;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0;
            filter: alpha(opacity=0);
            background-size: cover;
            background-position: 40% center;
        }
        #c1 {
