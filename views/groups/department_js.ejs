    function onYouTubeIframeAPIReady() {//此函數在IFrame Player API code 載入後將自動呼叫
        $(".player").each(function(){
            // console.log(this.id);
            //console.log($(this));
            let id=this.id;
            player[id] = new YT.Player(id, {
                height: '390',
                width: '640',
                videoId: id, //Youtube ID
                enablejsapi: 1,
                origin: 'http://localhost:3000'

            });
        })
    }
