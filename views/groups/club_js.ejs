<script>
    
    $(document).ready(function(){

        let y =$(window).height();
        let h =(y-65)+"px"
        document.body.style.setProperty('--height', h);

        $(".learn").mousedown(function(){
            $(".learns").show();
            $(".plays").hide();
            $(".dates").hide();
            $(".services").hide();
        });

        $(".play").mousedown(function(){
            $(".plays").show();
            $(".learns").hide();
            $(".dates").hide();
            $(".services").hide();
        });

        $(".date").mousedown(function(){
            $(".dates").show();
            $(".learns").hide();
            $(".plays").hide();
            $(".services").hide();
        });

        $(".service").mousedown(function(){
            $(".services").show();
            $(".learns").hide();
