<script>
$(document).ready(() => {
    var w=$(window).width();
    var h=$(window).height();
    // $(".pad").css({'height':h-50});
    if(w<800){  
            $(".intro").removeClass("alert");
            $(".intro").removeClass("alert-dismissible");

        }
    $("body").css({'height':h-50,'width':w});
    $(".screen").css({'background-size':w*0.5+"px "+h*0.28+"px"});
    $(window).resize(function() {
        var w=$(window).width();
        var h=$(window).height();

        $(".screen").css({'background-size':w*0.5+"px "+h*0.28+"px"});
        if(w<800){  
            $("body").css({'height':h-50,'width':w});
            $("body").css({'background-size':w+"px "+h-50+"px"});
            $(".intro").removeClass("alert");
            $(".intro").removeClass("alert-dismissible");
            $(".intro2").hide();
            // $(".picture").css({'width':w});
        }
        else{
            // $(".pad").css({'height':h-50});
        }

    });
