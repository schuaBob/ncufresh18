    $('.close-toggle').on('click', function(e) {
            $('.intro2').toggle(1000);
            $('.people1').toggleClass('people1-act');
            e.preventDefault();
    });
    $('.people1').on('click', function(e) {
            $('.intro2').toggle(1000);
            $('.people1').toggleClass('people1-act');
            //$('.people1').css({'width': '20%','height':'40%'});
            // $('.alert').slideToggle(1000);
            e.preventDefault();
    });
    //預設字樣
    $(".name").addClass("allName");
    $('#introContent').append("由一群熱情的學長姊組成新生知訊網團隊，利用暑假的日子聚在一起開會討論、撰寫程式、拍攝影片、繪製圖片。讓2018新生知訊網帶著各位中央大學的新鮮人開啟精彩的大學生活吧！");
