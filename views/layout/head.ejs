<style>
    <%_ /* 全域思源黑體 */ -%>
    @import url(//fonts.googleapis.com/earlyaccess/notosanstc.css);
    * {
        font-family: 'Noto Sans TC', sans-serif;
    }
    html {
        position: relative;
        min-height: 100%;
        
    }
    #Navbar {
        background-color: rgba(0,0,0,.65);
        top: 0;
        position: fixed;
        transition: top 0.3s;
        z-index: 4000;
    }
    body {
        padding-top: 56px;
        padding-bottom: 24px;
        min-height: 100vh;
        <%_ /* overscroll-behavior-y: none; 這真的不知道該加還是不加ＱＱ */ -%>
    }
    footer {
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        overflow: hidden;
        text-align: center;
        background-color: rgba(0,0,0,.85);
    }
    .text-white {
        font-weight: bold;
        cursor: pointer;
    }
    .footer-first-line, .footer-second-line, .footer-third-line {
        color: white;
    }
    @media only screen and (max-width: 630px) {
        .footer-first-line {
            display: none;
        }
    }
    @media only screen and (max-width: 300px) {
        .footer-third-line {
            display: none;
        }
    }
</style>