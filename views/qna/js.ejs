            }
            $('tr.Q').hide();
            $('tr.其他').fadeIn(500);
        }      
    });
    //人氣與時間的排序(list.js)
    var options = {
        valueNames: [ 'time', 'hot' ]
    };
    var userList = new List('select111', options);
    //排序判別
    $(".Hot").on('click',function(){
        if (w < 600) {
            //手機版排序按鈕動畫
            $("div.Hot").css({"color":"#29ABE2","font-weight":"bold"});
            $("div.Time").css({"color":"black","font-weight":"normal"});
        }
        else{
            //電腦版排序按鈕動畫
            $("div.Hot").css({"background-color":"#29ABE2","border-radius":"20px"});
            $("div.Time").css({"background-color":"transparent"});
        }
        //人氣的排序(list.js)
        userList.sort("hot",{
            order:'desc',
            sortFunction: function (a, b) {
                console.log(a._values.hot);
                var Aobjs = $(a.elm).find('.ans');
                var Bobjs = $(b.elm).find('.ans');
                if ((Aobjs[0].innerHTML === "無解答") != (Bobjs[0].innerHTML === "無解答")) {
                    return Aobjs[0].innerHTML === "無解答"  ? 1 : -1;
                }
                else{
                    return (a._values.hot -  b._values.hot)>0 ? 1 : 
                            (a._values.hot - b._values.hot)<0 ? -1 : 0;
    
                }
    
         }
        });
    });
    $(".Time").on('click',function(){
        if (w < 600) {
            //手機版排序按鈕動畫
            $("div.Time").css({"color":"#29ABE2","font-weight":"bold"});
            $("div.Hot").css({"color":"black","font-weight":"normal"});
        }
        else{
            //電腦版排序按鈕動畫
            $("div.Time").css({"background-color":"#29ABE2","border-radius":"20px"});
            $("div.Hot").css({"background-color":"transparent"});
        }
        //時間的排序(list.js)
        userList.sort("time",{
            order:'desc',
            sortFunction: function (a, b) {
                console.log(a._values.time);
                var Aobjs = $(a.elm).find('.ans');
                var Bobjs = $(b.elm).find('.ans');
                if ((Aobjs[0].innerHTML === "無解答") != (Bobjs[0].innerHTML === "無解答")) {
                    return Aobjs[0].innerHTML === "無解答"  ? 1 : -1;
                }
                else{
                    return (a._values.time -  b._values.time)>0 ? 1 : 
                            (a._values.time - b._values.time)<0 ? -1 : 0;
    
                }
    
         }
        });
    });
    //回到頁面頂端動畫
    $(".goTop").click(function(){
        jQuery("html,body").animate({
            scrollTop:0
        },300);
    });
    //滑鼠移動到我要發問按鈕上面會換圖案
    $('.askbutton').on('mouseover', function(){
        $(this).css({'background':'url(發問按鈕2.png)','background-size':'cover'});
    });
    $('.askbutton').on('mouseout', function(){
        $(this).css({'background':'url(發問按鈕1.png)','background-size':'cover'});
    });
    //紀錄問題點擊次數
    $(".titleQ").on('click',function(){
        //var id = $(this).prop('id');
        var id = this.id.split('-')[0];
        $.ajax({
            url: '/qna/clickQ/' + id,
            method: 'GET',
            success: function(res) {
            
                //動態新增點擊次數
                var objs = $('.' + id).find('.view');
                console.log(objs);
                for (var i = 0; i < objs.length; i++) {
                    objs[i].innerHTML = parseInt(objs[i].innerHTML) + 1;
                }
        
            }
        })
    })
    //紀錄板規點擊次數
    $(".titleR").on('click',function(){
        //var id = $(this).prop('id');
        var id = this.id.split('-')[0];
        $.ajax({
            url: '/qna/clickR/' + id,
            method: 'GET',
            success: function(res) {
            
                //動態新增點擊次數
                var objs = $('.' + id).find('.view');
                for (var i = 0; i < objs.length; i++) {
                    objs[i].innerHTML = parseInt(objs[i].innerHTML) + 1;
                }
        
            }
        })
    })
    //CKEDITOR
    CKEDITOR.config.enterMode = CKEDITOR.ENTER_BR;
    CKEDITOR.config.shiftEnterMode = CKEDITOR.ENTER_BR; 
    $('.answer').each(function(e){
        CKEDITOR.replace(this.id,{
        filebrowserUploadUrl: '/uploader',
        });
    });
    //刪除問題
    $('.deleteQ').on('click', function() {
      if (confirm("確定要刪除嗎？")) {
        $.ajax({
          method: 'GET',
          url: '/qna/deleteQ/' + this.id
        }).done(function(res) {
          alert('刪除成功');
          //$('#modal-admin-answer').modal('hide');
          //動態刪除
          $('.' + res.id).remove();
        })
        // .fail(function(err) {
        //   alert('發生錯誤: ' + err);
        // })
      }
    });
    //刪除板規
    $('.deleteR').on('click', function() {
      if (confirm("確定要刪除嗎？")) {
        $.ajax({
          method: 'GET',
