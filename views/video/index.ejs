                <% } %>

                <% for(let i = 1; i<9; i++){ %>
                    <td>
                        <!-- <img src="button/c<%= i %>光碟.png" video="QAvideo" class='cd_col item video_item_QAvideo  video_item_QAvideo_<%= i %> sbtn turn' college='c<%= i %>'> -->
                        <img unselectable="on" src="button/c<%= i %>.png" video="QAvideo" class='video_item_QAvideo_col item video_item_QAvideo  video_item_QAvideo_<%= i %> sbtn turn button' college='c<%= i %>'>
                    </td>
                <% } %>
                <td><img unselectable="on" src="button/返回.png" video="QAvideo" class="item video_item_QAvideo_c1 video_item_QAvideo_c2 video_item_QAvideo_c3 video_item_QAvideo_c4 video_item_QAvideo_c5 video_item_QAvideo_c6 video_item_QAvideo_c7 video_item_QAvideo_c8 sbtn video_item button" id="back"></td>
