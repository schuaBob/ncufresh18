<script>
document.getElementById('id').focus()
    $(document).on("click","#btn",function(event){
        if(($("input").val().length<9) || ($("input").val().length>9)){
            alert("ERROR") ;
        }
        else {
            if(($("input").val().substr(0,3))<107 && ($("input").val().substr(0,3))>100){
                window.location = "https://portal.ncu.edu.tw/system/120" ;
            }
            else if(($("input").val().substr(0,3))==107){
                window.location = "/password?id="+document.getElementById("id").value;    
            //window.location = "/register?id="+document.getElementById("id").value;
            }
            else{
                alert("U問題ㄛ") ;
            }
        }
    });
    $(document).on("keypress",function(event){
        if(event.keyCode === 13 ){
            if(($("input").val().length<9) || ($("input").val().length>9)){
                alert("ERROR") ;
            }
            else {
                if(($("input").val().substr(0,3))<107 && ($("input").val().substr(0,3))>100){
                    window.location = "https://portal.ncu.edu.tw/system/120" ;
                }
                else if(($("input").val().substr(0,3))==107){
                    window.location = "/password?id="+document.getElementById("id").value;   
                // window.location = "/register?id="+document.getElementById("id").value;
                }
                else{
                    alert("U問題ㄛ") ;
                }
            }
        }
    });
</script>