                if (pw1){
                    if(pw1 === pw2){
                        alert("讚ㄛ") ;
                    }
                    else {
                        alert("低能?") ;
                    }
                }
                else{
                    alert("沒填密碼") ;
                }
            }
            else{
                alert("名字") ;
            }
        }
    });
</script>