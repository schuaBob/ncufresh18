function colorEgg() {
    var cutes = game.add.group()
    var yBasic =  game.camera.y - 40
    var x = 0, y = yBasic;
    for (let i = 0; i < 22; i++) {
        setTimeout(function() {
            if (i === 4 || i === 8) {
                y += 200
            } else if (i === 16) {
                y += 200
            }
            createCute(x, y)
            
            if (i < 3 || (i >= 8 && i < 12)) {
                x += 200
            } else if (i > 3 && i < 7) {
                x -= 200              
            } else if (i >= 12 && i < 15) {
                x += 200
            } else if (i > 15 && i < 18) {
                x -= 200
            } else if (i > 18 && i < 20) {
                x += 200
            } else if (i >= 20 && i < 21) {
                x -= 100
            }

            if (i === 12) {
                x = 100, y = yBasic + 100
            } else if (i === 18) {
                x = 200, y = yBasic + 200
            }

        }, (i *80))
    }

    function createCute(x, y) {
        // console.log("create cute " +"X:" + x + "Y: " + y)
        var cute = cutes.create(x, y, 'cute')
        cute.animations.add('jump')
        cute.play('jump', 15, true)
    }

    return cutes
}

